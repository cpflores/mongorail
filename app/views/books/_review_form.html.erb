<%= form_for Review.new, { class: 'form-horizontal' } do |f| %>
  <%= f.hidden_field :book_id, value: book.id %>

  <div class="form-group row">
    <div class="col-sm-5">
      <%= f.text_field :title, placeholder: 'Title', class: 'form-control' %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
    </div>
    <div class="col-sm-3">
      <%= f.select :score, options_for_select(["Select Score", 1,2,3,4,5], disabled: "Select Score", selected: 3), {}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.text_area :comment, rows: 5, placeholder: 'Comment', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
