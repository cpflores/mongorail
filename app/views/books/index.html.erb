<h1>Listing Books</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Isbn</th>
      <th>Abstract</th>
      <th>Pages</th>
      <th>Price</th>
      <th>Released at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.isbn %></td>
        <td><%= book.abstract %></td>
        <td><%= book.pages %></td>
        <td><%= book.price %></td>
        <td><%= book.released_at %></td>
        <td><%= link_to 'Show', book_path(book) %></td>
        <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

